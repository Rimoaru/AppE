<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rvItemSurah"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <ImageView
        android:id="@+id/ivPrePDF"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/ic_logo"
        android:background="@color/blue_500"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tvNamaSurah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        tools:text="Surah Al-Baqoroh 1-26"
        app:layout_constraintStart_toEndOf="@id/ivPrePDF"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/tvJmlAyat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        tools:text="7 Ayat"
        app:layout_constraintStart_toEndOf="@+id/ivPrePDF"
        app:layout_constraintTop_toBottomOf="@+id/tvNamaSurah"/>
</androidx.constraintlayout.widget.ConstraintLayout>